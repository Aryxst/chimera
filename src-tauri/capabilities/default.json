{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "fs:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://store.steampowered.com/api/*"
        },
        {
          "url": "https://api.steampowered.com/ISteamApps/GetAppList/v2/"
        }
      ]
    },
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-copy-file",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-exists",
    "fs:allow-write-text-file",
    "fs:scope-download",
    "fs:allow-open",
    "fs:scope-appdata",
    "dialog:default",
    "store:default"
  ]
}